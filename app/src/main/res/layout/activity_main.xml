<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/blackH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smoking"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/dp_15"
        android:background="@color/black"
        android:drawablePadding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_home_24"
        android:padding="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/blackH"
        android:layout_margin="@dimen/dp_15">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cigarette_buts_istock_1"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/punjab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/punjab_1st_in_india_to_ban_cigarette"
        android:textSize="@dimen/sp_22"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:padding="@dimen/dp_20"
        android:layout_margin="@dimen/dp_20"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/punjab"
        app:layout_constraintBottom_toBottomOf="@+id/punjab"
        app:layout_constraintStart_toStartOf="@+id/punjab"
        android:src="@drawable/red_line_test_starting"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/punjab"
        android:layout_margin="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/blackL">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/big_tex"
            android:textSize="15sp"
            android:padding="12dp"/>





    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/blackL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/published_at_12_00_p_m"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/dp_15"
        android:background="@color/black"
        android:drawablePadding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />








</androidx.constraintlayout.widget.ConstraintLayout>


